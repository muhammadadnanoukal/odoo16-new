<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_inherit_extension" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit.extension</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']" position="after">
                <group>
                    <group colspan="4"></group>
                    <group class="oe_subtotal_footer oe_right" colspan="2">
                        <field class="" name="total_amount"/>
                    </group>
                    <div class="clearfix"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='components']/field[1]/tree[1]/field[@name='product_qty']" position="after">
                <field name="last_price"/>
                <field name="check_field" invisible="1" />
                <field name="price_unit" attrs="{'readonly': [('check_field', '!=', True)]}"/>
            </xpath>
            <xpath expr="//page[@name='components']/field[1]/tree[1]/field[@name='product_uom_id']" position="after">
                <field name="price_subtotal"/>
            </xpath>

        </field>
    </record>
</odoo>