<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_bom_form" model="ir.ui.view">
            <field name="name">sale.order.bom.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[7]" position="after">
                    <field name="bom_id"
                           context="{'default_product_tmpl_id': product_template_id, 'new_product_variant':True}"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"
                           optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>